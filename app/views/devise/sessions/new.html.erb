<div class="landing-background">

<!--   <h1 class="app-header">FuzzFinders</h1> -->

  <img class="fuzz-logo" src="/images/FuzzFinders_RGB_Final.png">

  <h2 class="login-header">Log In!</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">

    <%= f.email_field :email, autofocus: true, :placeholder => "Your Email", class: 'email-field' %>
  </div>
<br>
  <div class="field">

    <%= f.password_field :password, autocomplete: "off", :placeholder => "Your Password", class: 'pw-field' %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'bottom-login-button btn btn-primary' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

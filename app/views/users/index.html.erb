<h2>Your submitted reports:</h2>
<ul class="report-list">
	<% @user_reports.each do |report|%>
		<li><a href="/users/<%= current_user.id %>/reports/<%=report.id%>"><%= report.pet_name %></a>, (<%= report.report_type %>)</li>
	<% end %>
</ul>


<form action="/users/<%= current_user.id %>/reports/new">
  <input type="hidden" name="report_type" value="lost">
  <input type="submit" value="Lost a Pet">
</form>

<form action="/users/<%= current_user.id %>/reports/new">
  <input type="hidden" name="report_type" value="found">
  <input type="submit" value="Found a Pet">
</form>

<%= button_to "Nearby Reports", 'reports#index', :method => :get %>

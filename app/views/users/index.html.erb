

<div class="container">

  <button class="btn btn-primary btn-orange" type="button">
    Your Wags <span class="badge"><%= current_user.wag %></span>
  </button>

  <% if current_user.reports.length == 0 %>

    <h4><em>Get wags by helping to find lost pets!</em><h4>

    <h3>Report a lost or found pet:<h3>

  <% else %>

    <h3>Your Pet Reports:</h3>
    <div class="report-list">
    	<% @user_reports.each do |report|%>
        <form  action="/users/<%= current_user.id %>/reports/<%=report.id%>">
    		  <input class="list-group-item list-group-item-info pet-report-list-items" type="submit" value="<%= report.pet_name %>, (<%= report.report_type %>)">
        </form>
    	<% end %>
    </div>

  <% end %>


<div class="container">


  <form action="/users/<%= current_user.id %>/reports/new">
    <input type="hidden" name="report_type" value="lost">
    <input class="lost-button btn btn-info btn-orange" type="submit" value="I Lost a Pet!">
  </form>

  <form action="/users/<%= current_user.id %>/reports/new">
    <input type="hidden" name="report_type" value="found">
    <input class="found-button btn btn-info btn-orange" type="submit" value="I Found a Pet!">
  </form>

  <%= link_to "Nearby Reports", reports_path, :method => :get, :class => 'nearby-reports btn btn-info btn-orange' %>

</div>


</div>


